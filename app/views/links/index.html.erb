<h1>Listing links</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Start</th>
    <th>End</th>
    <th>Url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link.mediatype %></td>
    <td><%= link.start %></td>
    <td><%= link.end %></td>
    <td><%= link.url %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


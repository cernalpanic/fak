<table class="datatable table">
	<thead>
		<tr>
			<th>Date</th>
			<th>Venue</th>
			<th>City</th>
			<th>St/Prv</th>
			<th>Country</th>
			<th>Description</th>
			<th>Songs</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<% @shows.each do |show| %>
		<% venue = Venue.find_by_id(show.venue_id)  %>
		<tr>
			<td><%= link_to show.date, show %></td>
				<td>
					<%= venue.name rescue '' %>
				</td>
				<td>
					<%= venue.city rescue '' %>
				</td>
				<td>
					<%= venue.state rescue '' %>
				</td>
				<td>
					<%= venue.country rescue '' %>
				</td>
	
			<td><%= show.description %></td>
			<td><%= show.songs.length %></td>
			<td><%= link_to 'Show', show %></td>
			<td><%= link_to 'Edit', edit_show_path(show) %></td>
			<td>
				<% if can? :manage, show %>
					<%= link_to 'Destroy', show, method: :delete, data: { confirm: 'Are you sure?' } %>
				<% end%>
			</td>
		</tr>
	<% end %>
</table>

<br />

